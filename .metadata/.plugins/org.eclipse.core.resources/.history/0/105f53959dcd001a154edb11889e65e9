<script> type="text/javascript">

	$(document).ready(function() {
		$("#loginForm").validate({
			rules:{
				email:{
					required: true,
					email:true
				},
				password: "required",
			},
			messages: {
				email: {
					email:"Please enter an valid email address!",
					required: "Please enter email!",
				},
				password: "Please enter password!",
			}
		});
		
		$("#rateYo").rateYo({
			    starWidth: "40px",
			    fullStar: true,
			    onSet: function (rating, rateYoInstance) {
			    	${"#rating"}.val(rating);
			    }
		});
	});
</script>
